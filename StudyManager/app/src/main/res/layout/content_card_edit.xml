<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="at.vocabdevelopment.studymanager.CardEditActivity"
    tools:showIn="@layout/activity_card_edit"
    android:background="@drawable/aluminium">



    <TextView
        android:id="@+id/textView"
        android:layout_width="145dp"
        android:layout_height="33dp"
        android:text="Question"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp" />

    <ScrollView
        android:layout_width="324dp"
        android:layout_height="180dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="8dp"
        android:id="@+id/scrollView3"
        app:layout_constraintHorizontal_bias="0.517"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        android:background="@drawable/text_background"
        android:padding="5dp">
        <EditText
            android:id="@+id/question_textview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="12"
            android:overScrollMode="always"
            android:scrollbarStyle="insideInset"
            android:scrollbars="vertical"
            android:text="@string/lorem_ipsum"
            android:padding="2dp"/>

    </ScrollView>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="157dp"
        android:layout_height="33dp"
        android:text="Answer"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="0.502"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/scrollView3"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/scrollView4"
        app:layout_constraintVertical_bias="0.4" />

    <ScrollView
        android:layout_width="324dp"
        android:layout_height="180dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="44dp"
        app:layout_constraintTop_toBottomOf="@+id/scrollView3"
        android:id="@+id/scrollView4"
        android:background="@drawable/text_background"
        android:padding="5dp">
        <EditText
            android:id="@+id/answer_textview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="12"
            android:overScrollMode="always"
            android:scrollbarStyle="insideInset"
            android:scrollbars="vertical"
            android:text="@string/lorem_ipsum"
            android:padding="2dp"/>

    </ScrollView>

    <Button
        android:id="@+id/correct_button"
        android:layout_width="90dp"
        android:layout_height="72dp"
        android:text="Correct"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="16dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/wrong_button"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintHorizontal_bias="0.504"
        android:background="@drawable/blue_button"/>

    <Button
        android:id="@+id/wrong_button"
        android:layout_width="90dp"
        android:layout_height="72dp"
        android:text="Wrong"
        android:layout_marginRight="65dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="16dp"
        android:layout_marginEnd="65dp"
        android:background="@drawable/blue_button"/>


</android.support.constraint.ConstraintLayout>
