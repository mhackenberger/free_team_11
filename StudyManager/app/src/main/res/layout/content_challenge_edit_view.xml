<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="at.vocabdevelopment.studymanager.EditChallengeActivity"
    tools:showIn="@layout/activity_challenge_edit_view"
    android:background="@drawable/background">


    <EditText
        android:id="@+id/editText5"
        android:layout_width="234dp"
        android:layout_height="44dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Challenge Name"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/button11"
        android:layout_marginRight="8dp"
        app:layout_constraintHorizontal_bias="0.266"
        android:background="@drawable/text_background"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="16dp" />

    <Button
        android:id="@+id/button11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Delete Deck"
        android:layout_marginRight="28dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="16dp"
        android:background="@color/button_blue"
        android:layout_marginEnd="16dp" />

    <Button
        android:id="@+id/button12"
        android:layout_width="134dp"
        android:layout_height="32dp"
        android:text="Show whole deck"
        app:layout_constraintRight_toLeftOf="@+id/button13"
        android:layout_marginRight="29dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="0.465"
        android:background="@color/button_blue"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="29dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/scrollView2"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/button16"
        app:layout_constraintVertical_bias="0.59" />

    <Button
        android:id="@+id/button13"
        android:layout_width="142dp"
        android:layout_height="30dp"
        android:text="Show active deck"
        android:layout_marginRight="30dp"
        app:layout_constraintRight_toRightOf="parent"
        android:background="@color/button_blue"
        android:layout_marginEnd="28dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/button14"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/scrollView2"
        app:layout_constraintVertical_bias="0.571" />

    <Button
        android:id="@+id/button14"
        android:layout_width="116dp"
        android:layout_height="64dp"
        android:text="Save and Home"
        android:layout_marginLeft="230dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="34dp"
        android:background="@color/button_blue"
        android:layout_marginStart="230dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.0" />

    <Button
        android:id="@+id/button16"
        android:layout_width="121dp"
        android:layout_height="63dp"
        android:text="New question"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="35dp"
        android:background="@color/button_blue"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/button14"
        android:layout_marginRight="8dp"
        app:layout_constraintHorizontal_bias="0.354" />

    <ScrollView
        android:layout_width="323dp"
        android:layout_height="289dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="0.508"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/editText5"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintVertical_bias="0.089"
        android:id="@+id/scrollView2">

        <LinearLayout
            android:id="@+id/questions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" />
    </ScrollView>

</android.support.constraint.ConstraintLayout>
