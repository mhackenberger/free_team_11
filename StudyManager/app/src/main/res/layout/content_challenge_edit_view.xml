<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="at.vocabdevelopment.studymanager.EditChallengeActivity"
    tools:showIn="@layout/activity_challenge_edit_view"
    android:background="@drawable/background">


    <EditText
        android:id="@+id/editText5"
        android:layout_width="234dp"
        android:layout_height="44dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Challenge Name"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/button11"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="25dp"
        app:layout_constraintBottom_toTopOf="@+id/listView"
        app:layout_constraintHorizontal_bias="0.266"
        android:background="@drawable/text_background"/>

    <Button
        android:id="@+id/button11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Delete Deck"
        android:layout_marginRight="16dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="16dp"
        android:background="@color/button_blue"/>

    <ListView
        android:layout_width="328dp"
        android:layout_height="294dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="21dp"
        app:layout_constraintTop_toBottomOf="@+id/button11"
        android:id="@+id/listView"
        android:background="@drawable/text_background"/>

    <Button
        android:id="@+id/button12"
        android:layout_width="143dp"
        android:layout_height="68dp"
        android:text="Active"
        app:layout_constraintRight_toLeftOf="@+id/button13"
        android:layout_marginRight="29dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/listView"
        android:background="@color/button_blue"/>

    <Button
        android:id="@+id/button13"
        android:layout_width="143dp"
        android:layout_height="68dp"
        android:text="Inactive"
        android:layout_marginRight="28dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/listView"
        android:background="@color/button_blue"/>

    <Button
        android:id="@+id/button14"
        android:layout_width="75dp"
        android:layout_height="49dp"
        android:text="Save"
        app:layout_constraintRight_toLeftOf="@+id/button15"
        android:layout_marginRight="-8dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="0.307"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="35dp"
        android:background="@color/button_blue"/>

    <Button
        android:id="@+id/button15"
        android:layout_width="75dp"
        android:layout_height="49dp"
        android:text="Edit"
        app:layout_constraintRight_toLeftOf="@+id/button16"
        android:layout_marginRight="7dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="35dp"
        android:background="@color/button_blue"/>

    <Button
        android:id="@+id/button16"
        android:layout_width="75dp"
        android:layout_height="49dp"
        android:text="New"
        app:layout_constraintRight_toLeftOf="@+id/button17"
        android:layout_marginRight="11dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="35dp"
        android:background="@color/button_blue"/>

    <Button
        android:id="@+id/button17"
        android:layout_width="75dp"
        android:layout_height="49dp"
        android:text="Delete"
        android:layout_marginRight="39dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="35dp"
        android:background="@color/button_blue"/>
</android.support.constraint.ConstraintLayout>
