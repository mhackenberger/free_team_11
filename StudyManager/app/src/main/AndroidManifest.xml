<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="at.vocabdevelopment.studymanager">

    <application
        android:name="com.orm.SugarApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <meta-data
            android:name="QUERY_LOG"
            android:value="true" />

        <activity
            android:name=".StartActivity"
            android:label="@string/title_activity_start"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ChallengeQuestionActivity"
            android:label="@string/title_activity_challenge_question"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ChallengeOverviewActivity"
            android:label="@string/title_activity_challenge_overview"
            android:theme="@style/AppTheme.NoActionBar"
            android:windowSoftInputMode="adjustPan|stateHidden" />
        <activity
            android:name=".ChallengeAnswerActivity"
            android:label="@string/title_activity_challenge_answer"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".EditCardActivity"
            android:label="@string/title_activity_card_edit"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".AddCardActivity"
            android:label="@string/title_activity_card_add"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ChallengeResultActivity"
            android:label="@string/title_activity_challenge_result"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ChallengeSetupActivity"
            android:label="@string/title_activity_challenge_setup"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".EditChallengeActivity"
            android:label="@string/title_activity_challenge_edit_view"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".AddChallengeActivity"
            android:label="@string/title_activity_add_challenge"
            android:theme="@style/AppTheme.NoActionBar"></activity>
    </application>

</manifest>